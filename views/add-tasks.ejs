<%- include('./includes/head.ejs') %>
<body>
    <%- include('./includes/navigation.ejs') %>
    <main>
        <form class="task-form" action="/admin/tasks" method="POST" enctype="multipart/form-data">
            <div class="task-form-control">
                <h2>Create a New Task</h2>

                <label>Title</label>
                <input type="text" name="title" placeholder="Enter a title" required />

                <label>Description</label>
                <textarea name="description" placeholder="Enter the task description" rows="3" required></textarea>

                <label>Time Frame</label>
                <input type="datetime-local" name="time" required />

                <label>Supporting Document</label>
                <input type="file" name="docs" />

                <button type="submit">Save</button>
            </div>
        </form>

    </main>
<%- include('./includes/end.ejs') %>